<!DOCTYPE html>
html(lang="en")

    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Forum
        link(rel="stylesheet", type="text/css", href="/node_modules/bootstrap/dist/css/bootstrap.min.css")
        script(type="text/jscript", src='/node_modules/jquery/dist/jquery.js')
        link(rel="stylesheet", type="text/css", href="/static/css/main.css")

    body
        // main content
        nav.nav
            ul.list.list-horizontal
                li.list-item
                    a.nav-btn(href="/") Home
                li.list-item.dropdown
                    a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#") Items
                    ul.dropdown-list.list
                        li.list-item
                            a.nav-btn#nav-btn-item-all(href="/items") All items
                        li.list-item
                            a.nav-btn#nav-btn-item-add(href="/items/form") Add item

                li.list-item.dropdown
                    a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#") Todos
                    ul.dropdown-list.list
                        li.list-item
                            a.nav-btn#nav-btn-item-all(href="/todos") All Todos
                        li.list-item
                            a.nav-btn#nav-btn-item-add(href="/todos/form") Add Todo

                if user
                    li.list-item.dropdown
                        a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#")
                            =user.username
                        ul.dropdown-list.list
                            li.list-item
                                form(action="/auth/sign-out" method="post")
                                    button.nav-btn sign-out
                else
                    li.list-item.dropdown
                        a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#") User
                        ul.dropdown-list.list
                            li.list-item
                                a.nav-btn#nav-btn-item-all(href="/auth/sign-up") Sign Up
                            li.list-item
                                a.nav-btn#nav-btn-item-add(href="/auth/sign-in")
                                    | Sign In
        block mainContent
        h1 I am Home Welcome

        .container