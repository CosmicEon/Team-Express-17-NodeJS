extends ../_shared/_main.pug

block centerContent
  form(action='/users/login', method='POST')
    .form-group
      label(for='registerName') Name
      input#registerName.form-control(type='text', name='username', placeholder='Enter Username')
    .form-group
      label(for='registerPassword') Password
      input#registerPassword.form-control(type='password', name='password', placeholder='Enter Password')
    button.btn.btn-success(type='submit') Login