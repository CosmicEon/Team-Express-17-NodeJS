extends ../_shared/_main.pug

block centerContent
  h2 Last active topics
  each article in articles
    .row
      .col-sm-12.col-md-12
        .thumbnail
          .caption
            h3= article.title
            p= article.body
            p
              a.btn.btn-primary(href='#', role='button') Coment
  .row
    .col-sm-12.col-md-12
      nav(aria-label='Page navigation')
        ul.pagination
          li
            a(href='#', aria-label='Previous')
              span(aria-hidden='true') «
          li
            a(href='#') 1
          li
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') 4
          li
            a(href='#') 5
          li
            a(href='#', aria-label='Next')
              span(aria-hidden='true') »